{
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:react-hooks/recommended",
		"plugin:prettier/recommended"
	],
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jest": true
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2021,
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"rules": {
		"prettier/prettier": "error"
	},
	"plugins": ["react", "prettier"],
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
